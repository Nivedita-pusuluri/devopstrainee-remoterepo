pipeline{
    tools{
        jdk 'myjava'
        maven 'mymaven'
    }
    agent any
    stages{
        stage('Checkout'){
           steps{
                git 'https://github.com/Nivedita-pusuluri/devopstrainee-remoterepo.git'
            }
        }
        stage('Complile'){
           steps{
                sh 'mvn compile'
            }
        }
        stage('CodeReview'){
           steps{
                sh 'mvn pmd:pmd'
            }
            post{
                always{
                    pmd pattern: 'target/pmd.xml'
                }
            }
        }
        stage('UnitTest'){
           steps{
                sh 'mvn test'
            }
        }
        stage('MetricCheck'){
            steps{
                sh 'mvn cobertura:cobertura -Dcobertura.report.format=xml'
            }
            post{
                always{
                    cobertura coberturaReportFile: 'target/site/cobertura/coverage.xml'
                }
            }
        }
        stage('Package'){
           steps{
                sh 'mvn package'
            }
        }
        stage('deploy'){
           steps{
                rm -rf jenkins-docker
                mkdir jenkins-docker
                cd jenkins-docker
                cp /var/lib/jenkins/workspace/Package/target/addressbook.war .
                touch dockerfile
                cat <<EOT>> dockerfile
                From tomcat
                ADD addressbook.war /usr/local/tomcat/webapps
                CMD "catalina.sh" "run"
                EXPOSE 8080
                EOT
                sudo docker build -t deploy:$BUILD_NUMBER .
                sudo docker run -itd -P deploy:$BUILD_NUMBER
                }
           }    
      }   
 }

        
        
    
    
